{
  "name": "kurisu-node",
  "version": "1.0.0",
  "author": "sjdhome",
  "description": "kurisu backend server",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node .",
