    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "change-case": "^5.3.0",
    "fastify": "^4.25.2",
    "pg": "^8.11.3",
    "pino": "^8.17.1",
    "cross-env": "^7.0.3"
  }
}
